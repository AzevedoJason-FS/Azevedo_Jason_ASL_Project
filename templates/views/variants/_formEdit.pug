form(action='/variants/'+variants.id, method="POST")
    input( type="hidden" name="id" value=variants.id)
    label( for="title" ) Title: 
    input( type="text" name="title" id="title" value=variants.title) 
    br
    label( for="price" ) Price: 
    input( type="number" name="price" id="price" value=variants.price min="0" step=".01") 
    br
    input( type="submit" name="submit" id="submit" )

    